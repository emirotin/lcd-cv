block vars
  pageId = 'common'

doctype 5
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    block head

    title Eugene Mirotin's CV

    link(rel='stylesheet', href='/stylesheets/style.css' + cachebust)
    block styles

    if reload
      script(src='/socket.io/socket.io.js')
      script(src='/javascripts/reload-client.js')

  body(class="page-#{pageId}")
    block content
    script(src='/javascripts/bundle.js')
