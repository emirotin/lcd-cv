extends layout

block vars
  pageId = 'cv'

block head
  meta(name="viewport", content="width=device-width, initial-scale=1")

block styles
  link(href="//netdna.bootstrapcdn.com/bootswatch/3.1.1/flatly/bootstrap.min.css", rel="stylesheet")

block scripts-top
  script(src="https://maps.googleapis.com/maps/api/js?key=#{MAPS_API_KEY}&sensor=false")
  script(src="http://lab.lepture.com/github-cards/widget.js")

block content
  .container
    header.page-header
      .print.pull-right
        button.btn.btn-sm.btn-default(onclick="window.print();")
          span.glyphicon.glyphicon-print
          | &nbsp;Print
      .media
        .my-photo.pull-left.thumbnail
          img.media-object(src="/images/me.jpg", alt="Me")
        hgroup.media-body
          h1.media-heading
            | Eugene Mirotin
            small (left)
          .h4 Web Developer
          .h4
            | Age: #{age}.&nbsp;
            | Location:&nbsp;
            a(href="#", data-toggle="modal", data-target="#map-modal") Minsk, Belarus
            | .
          .h4
            a(href="mailto:emirotin@gmail.com") emirotin@gmail.com
            | ,&nbsp;
            a(href="skype:guardante") skype:guardante
            | .
          .h3.skills
            | Core skills:&nbsp;
            include cv-partials/_skills

    section.links
      .pull-right
        .github-card(data-github="emirotin", data-target="blank", data-width="300", data-height="150")
      .code-link
        h2 Sample Code
        ul.lead
          li
            a(href="https://github.com/emirotin/lcd-cv", target="_blank") This CV, has some interesting parts
          li
            a(href="https://github.com/emirotin/mongodb-migrations", target="_blank") Migration lib for MongoDB
          li
            a(href="https://github.com/emirotin/mimosa-ember", target="_blank") Sample Ember project for Mimosa
          li
            a(href="http://emirotin.github.io/hover-dover/", target="_blank") A fun experiment with PNG
          li
            a(href="http://emirotin.github.io/loop-machine/", target="_blank") A fun experiment with SoundCloud API
      .clearfix
    hr

    section.projects
      h1 Relevant Experience
      include cv-partials/_projects

    section
      h1 Other Experience
      p
        | My previous experience also includes working as technical writer, information architect,
        | business analyst and UX designer.

    section
      h1 Education
      p
        | I graduated from&nbsp;
        a(href="http://www.bsu.by/en/main.aspx", target="_blank") Belarusian State University,
        | &#32;Faculty of Applied Math and Computer Science.
        | Got Magister degree in 2009.

    section
      h1 Need references from my former colleagues?
      p
        a(href="mailto:emirotin@gmail.com") Request contacts, write to emirotin@gmail.com

    footer
      p
        | &copy; Eugene Mirotin, 2014.&#32;
        a(href="mailto:emirotin@gmail.com") emirotin@gmail.com

  #map-modal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal")&times;
          h4.modal-title Wut? Krakozhia?
        .modal-body
          .map-canvas
        .modal-footer
          button.btn.btn-default(type="button", data-dismiss="modal") Close
